---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "@fontsource/inter";
import "../styles/main.scss";
export interface Props {
	title: string;
}

const reqMeta = await fetch("https://backoffice.wpaide.fr/wp-json/rankmath/v1/getHead?url=https://backoffice.wpaide.fr");
const res = await reqMeta.json();
const meta = res.head;
---

<!DOCTYPE html>
<html class="scroll-smooth" lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<Fragment set:html={meta} />
	</head>
	<body class="text-blue-theme scroll-smooth">
		<Header />
		<slot />
		<Footer />
		<style></style>
	</body>
</html>
