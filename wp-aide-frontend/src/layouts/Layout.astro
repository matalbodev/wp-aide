---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "@fontsource/inter/variable.css";
import "../styles/main.scss";
import "../styles/tailwind.css";
export interface Props {
	title: string;
}

const reqMeta = await fetch("https://backoffice.wpaide.fr/wp-json/rankmath/v1/getHead?url=https://backoffice.wpaide.fr");
const res = await reqMeta.json();
const meta = res.head;
---

<!DOCTYPE html>
<html class="scroll-smooth font-sans" lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" href="/favicon.ico" sizes="any" />
		<link rel="icon" href="/favicon.svg" type="image/svg+xml" />
		<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
		<link rel="manifest" href="/site.webmanifest" />
		<meta name="theme-color" content="#4a4a4a" />
		<Fragment set:html={meta} />
	</head>
	<body class="text-blue-theme scroll-smooth">
		<Header />
		<slot />
		<Footer />
		<style></style>
	</body>
</html>
