---
import Nav from "./Nav.astro";
import { Image, Picture } from "@astrojs/image/components";
---

<script>
	const header = document.querySelector(".header");
	const stickyClasses = ["fixed", "bg-blue-theme"];
	const headerSticky = () => {
		const headerHeight = header?.clientHeight;
		if (!headerHeight) return;
		if (window.scrollY > headerHeight) {
			for (const stickyClass of stickyClasses) {
				header.classList.add(stickyClass);
			}
			header.classList.remove("absolute");
			return;
		}
		for (const stickyClass of stickyClasses) {
			header.classList.remove(stickyClass);
		}
		header.classList.add("absolute");
	};

	window.addEventListener("scroll", () => headerSticky());

	// get screen size
	const screenMobile = window.matchMedia("(max-width: 768px)");
</script>

<header class="header alignfull top-0 left-0 w-full z-50 py-5 absolute">
	<div class="wp-block-group__inner-container px-6">
		<div class="sm:flex items-center">
			<div class="text-center sm:text-left">
				<a class="iniline-block text-center" href="/">
					<img class="mx-auto" src="/assets/logo-type-dark-bg.svg" alt="Logo" width="150" />
				</a>
			</div>
			<div class="mt-4 sm:mt-0 navigation ml-auto">
				<Nav />
			</div>
		</div>
	</div>
</header>
